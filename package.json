{
    "name": "desktop-oauth-bridge",
    "main": "dist/index.js",
    "version": "0.0.0",
    "description": "Bridge between desktop and mobile applications for securely managing OAuth 2.0 authentication",
    "keywords": [
        "oauth",
        "authentication",
        "desktop",
        "mobile"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/angelxmoreno/desktop-oauth-bridge.git"
    },
    "bugs": {
        "url": "https://github.com/angelxmoreno/desktop-oauth-bridge/issues"
    },
    "homepage": "https://github.com/angelxmoreno/desktop-oauth-bridge#readme",
    "scripts": {
        "start": "NODE_ENV=production node dist/index.js",
        "dev": "bun --watch src/index.ts",
        "build": "tsup src/index.ts --env.NODE_ENV production",
        "prepare": "[ -d .git ] && husky install || echo 'Skipping Husky install'",
        "commitlint": "commitlint --edit",
        "lint": "eslint src/** --max-warnings 0",
        "lint:fix": "eslint src/** --fix --cache",
        "test": "your-test-command-here",
        "coverage": "your-coverage-command-here",
        "docs": "your-docs-generation-command-here",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@flydotio/dockerfile": "latest",
        "@swc/core": "^1.5.3",
        "@types/body-parser": "^1.19.5",
        "@types/bun": "latest",
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "conventional-changelog-cli": "^5.0.0",
        "eslint": "^8.0.0",
        "eslint-config-universe": "^12.0.1",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "pino-pretty": "^11.0.0",
        "prettier": "^3.2.5",
        "tsup": "^8.0.2"
    },
    "peerDependencies": {
        "typescript": "^5.4.5"
    },
    "dependencies": {
        "axios": "^1.6.8",
        "body-parser": "^1.20.2",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "date-fns": "^3.6.0",
        "express": "^4.19.2",
        "morgan": "^1.10.0",
        "pino": "^9.0.0",
        "reflect-metadata": "^0.2.2",
        "routing-controllers": "^0.10.4",
        "typescript": "^5.4.5"
    },
    "eslintConfig": {
        "root": true,
        "extends": [
            "universe/node"
        ]
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "semi": true,
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": "eslint --fix",
        "*.{json,md}": "prettier --write"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
